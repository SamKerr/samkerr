---
import Icon from './Icon.astro';
import type { iconPaths } from './IconPaths';

/** Icon links to social media â€” edit these with links to your profiles! */
const iconLinks: { label: string; href: string; icon: keyof typeof iconPaths }[] = [
	{ label: 'GitHub', href: 'https://github.com/samkerr', icon: 'github-logo' },
	{ label: 'LinkedIn', href: 'https://www.linkedin.com/in/sam-kerr-a791b6199/', icon: 'linkedin-logo' },
	// { label: 'YouTube', href: 'https://www.youtube.com/samkerr/', icon: 'youtube-logo' },
];
---

<div class="socials">
    {
        iconLinks.map(({ href, icon, label }) => (
            <a href={href} class="social">
                <span class="sr-only">{label}</span>
                <Icon icon={icon} />
            </a>
        ))
    }
</div>

<style>
	.socials {
		display: flex;
		flex-wrap: nowrap;
		justify-content: center;
		font-size: var(--icon-size);
		gap: 0.5rem;
	}

	.social {
		display: flex;
		padding-right: 20px;
		padding: var(--icon-padding);
		text-decoration: none;
		color: var(--accent-dark);
		transition: color var(--theme-transition);
	}

	.social:hover,
	.social:focus {
		color: var(--accent-text-over);
	}

	@media (min-width: 60em) {
		.socials {
			display: flex;
			justify-content: flex-end;
			gap: 0.5rem;
		}
	}
</style>
